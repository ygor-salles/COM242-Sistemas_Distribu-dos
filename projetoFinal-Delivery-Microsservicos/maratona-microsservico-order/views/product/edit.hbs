<script type="text/babel">
    function Page() {
        return (
                <React.Fragment>
                    <MUI.Typography variant="h4">Editar produto</MUI.Typography>
                    <form action="/products/update/{{data.product.id}}" method="post">
                        <MUI.TextField
                            name="name"
                            label="Nome"
                            margin="normal"
                            variant="outlined"
                            fullWidth
                            required
                            defaultValue="{{data.product.name}}"
                            type="string"
                        ></MUI.TextField>

                        <MUI.TextField
                            name="price"
                            label="Preço"
                            margin="normal"
                            variant="outlined"
                            fullWidth
                            required
                            defaultValue="{{data.product.price}}"
                            type="number"
                        ></MUI.TextField>

                        <MUI.TextField
                            name="description"
                            label="Descrição"
                            margin="normal"
                            variant="outlined"
                            fullWidth
                            defaultValue="{{data.product.description}}"
                            type="string"
                        ></MUI.TextField>

                        <MUI.Button type="submit" variant="contained" color="primary">Salvar</MUI.Button>
                    </form>
                </React.Fragment>
        )
    }
</script>
