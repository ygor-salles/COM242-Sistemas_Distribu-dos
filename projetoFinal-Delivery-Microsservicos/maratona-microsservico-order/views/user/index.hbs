<script type="text/babel">
    function Page() {
        return (
                <MUI.Container>
                    <MUI.Typography variant={"h4"}>Listagem de usuários</MUI.Typography>
                    <MUI.Box dir={'rtl'} paddingBottom={2}>
                        {{#if data.user.admin}}
                            <MUI.Button
                                    title="Adicionar novo produto"
                                    color="primary"
                                    variant="contained"
                                    href="/users/create"
                            >
                                Novo usuário
                            </MUI.Button>
                        {{/if}}
                    </MUI.Box>
                    <MUI.Table>
                        <MUI.TableHead>
                            <MUI.TableRow>
                                <MUI.TableCell>Nome</MUI.TableCell>
                                <MUI.TableCell>E-mail</MUI.TableCell>
                                <MUI.TableCell>Perfil</MUI.TableCell>
                                <MUI.TableCell>Ações</MUI.TableCell>
                            </MUI.TableRow>
                        </MUI.TableHead>
                        <MUI.TableBody>
                            {{#forEach data.users}}
                                <MUI.TableRow>
                                    <MUI.TableCell>{{name}}</MUI.TableCell>
                                    <MUI.TableCell>{{email}}</MUI.TableCell>
                                    <MUI.TableCell>{{role}}</MUI.TableCell>
                                    <MUI.TableCell>
                                        <MUI.Button
                                            variant="contained"
                                            color="primary"
                                            startIcon={<MUI.Icon>edit</MUI.Icon>}
                                            href="/users/edit/{{id}}"
                                            >
                                        </MUI.Button>
                                        <MUI.Button
                                            variant="contained"
                                            color="secondary"
                                            startIcon={<MUI.Icon>delete</MUI.Icon>}
                                            href="/users/destroy/{{id}}"
                                            >
                                        </MUI.Button>
                                    </MUI.TableCell>
                                </MUI.TableRow>
                            {{/forEach}}
                        </MUI.TableBody>
                    </MUI.Table>
                </MUI.Container>
        );
    }
</script>
